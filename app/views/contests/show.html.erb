                  <%= f.submit "成功！CPO", :class=>"btn btn-success btn-block btn-lg"  %>
                <% end %>
              </div>
            </div>      
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <table class="table table-striped">
